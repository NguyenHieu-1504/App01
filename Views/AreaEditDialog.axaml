<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="App01.Views.AreaEditDialog"
        xmlns:models="using:App01.Models"
        Title="Khu Vực"
        Width="500" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <ScrollViewer>
        <StackPanel Margin="20" Spacing="15">
            <TextBlock Text="THÔNG TIN KHU VỰC" FontWeight="Bold" FontSize="16"/>
            <StackPanel Spacing="5">
                <TextBlock Text="Tên khu vực: *"/>
                <TextBox Name="txtName" Watermark="VD: Tầng 1, Khu A, VIP..."/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Sức chứa (số chỗ đỗ): *"/>
                <NumericUpDown Name="numMaxCapacity" Minimum="1" Maximum="10000" Value="100"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Polling Interval (giây): *"/>
                <NumericUpDown Name="numRefreshInterval" Minimum="1" Maximum="3600" Value="5"/>
            </StackPanel>

            <CheckBox Name="chkActive" Content="Kích hoạt khu vực này" IsChecked="True"/>

            <Separator Margin="0,10"/>

            <TextBlock Text="CẤU HÌNH MONGODB (Tùy chọn)" FontWeight="Bold" FontSize="14"/>
            <TextBlock Text="Để trống nếu dùng config global" Foreground="Gray" FontSize="12"/>

            <StackPanel Spacing="5">
                <TextBlock Text="MongoDB Connection String:"/>
                <TextBox Name="txtMongoConnection" Watermark="Để trống = dùng global" Height="60" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Database Name:"/>
                <TextBox Name="txtDatabaseName" Watermark="Để trống = dùng global"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Collection Name:"/>
                <TextBox Name="txtCollectionName" Watermark="Để trống = dùng global"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
                <Button Name="btnSave" Content="💾 Lưu" Width="100" Click="BtnSave_Click"/>
                <Button Name="btnCancel" Content="Hủy" Width="100" Click="BtnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>